<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alvaroperezdelgado.alarmahablada">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.INTERNET" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Alarm.AddAlarm" />
        <activity android:name=".Alarm.Days" />
        <activity android:name=".Alarm.SelectSong" />
        <activity android:name=".Alarm.SetAlarmName" />
        <activity android:name=".WeatherActivity" />
        <activity android:name=".Alarm.SetAlarm"></activity>

        <receiver android:name=".Alarm.AlarmReceiver" />

        <service
            android:name=".Alarm.RingTonePlayingService"
            android:enabled="true" />
    </application>

</manifest>
